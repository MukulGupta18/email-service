{
  "compilerOptions": {
    "target": "ES2020",                      // Set the target JavaScript version
    "module": "commonjs",                    // Use commonjs module system
    "strict": true,                          // Enable all strict type-checking options
    "esModuleInterop": true,                 // Enable compatibility with ES modules
    "skipLibCheck": true,                    // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,// Ensure consistent casing in file names
    "outDir": "./dist"                       // Output directory for compiled files
  },
  "include": ["src/**/*", "tests/**/*"],    // Files to include in compilation
  "exclude": ["node_modules"]               // Directories to exclude from compilation
}
